@{
    Layout="Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col s6 ticket-body">
        <h3>New Ticket</h3>
        <form class="" action="/new-ticket-user" method="post">
            <label for="user-name">Name:</label>
            <input type="text" name="user-name" value="@Model["User"].GetName()">
            <label for="user-address">Address:</label>
            <input type="text" name="user-address" value="@Model["User"].GetAddress()">
            <label for="user-phone">Phone:</label>
            <input type="text" name="user-phone" value="@Model["User"].GetPhone()">
            <label for="user-email">Email:</label>
            <input type="text" name="user-email" value="@Model["User"].GetEmail()">
            <input type="hidden" name="user-id" value="@Model["User"].GetId()">
            <label for="ticket-product">Product:</label>
            <input type="text" name="ticket-product">
            <label for="ticket-description">Description:</label>
            <textarea rows="8" name="ticket-description"></textarea>
            @if(Model["Departments"].Count != 0)
            {
                <div class="input-field">
                    <select class="" name="department-id">
                        @foreach(var department in Model["Departments"])
                        {
                            <option value="@department.GetId()">@department.GetName()</option>
                        }
                    </select>
                    <label for="department-id">Department:</label>
                </div>
            }
            <select class="" name="severity">
                <option>High</option>
                <option>Medium</option>
                <option selected>Low</option>
            </select>

            <button class="btn" type="submit" name="button">Save</button>
        </form>
    </div>
</div>
